generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String   @unique
  password_hash String
  phone_number  String?  @unique
  created_at    DateTime @default(now())

  @@map("users")
}

model Pet {
  id    String  @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  age   Int?
  about String?
  breed String?

  @@map("pets")
}
